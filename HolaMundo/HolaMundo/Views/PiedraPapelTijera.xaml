<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HolaMundo.Views.PiedraPapelTijera">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,20,0,0" /> <On Platform="Android" Value="0,0,0,0" />
        </OnPlatform>
    </ContentPage.Padding>

    <ContentPage.Content>

        <!-- esto es un comentario -->

        <StackLayout Margin="10">
            <Label Text="La computadora eligió:" HorizontalOptions="Center" />
            <Label x:Name="LabelUltimaEleccion" Text="-" HorizontalOptions="Center" />

            <Button Text="Piedra" Clicked="Button_Clicked" />
            <Button Text="Papel" Clicked="Button_Clicked" />
            <Button Text="Tijera" Clicked="Button_Clicked" />

            <Label Text="Mis puntos:" HorizontalOptions="Center" />
            <Label x:Name="LabelMiPuntaje" Text="0" HorizontalOptions="Center" />

            <Label Text="Puntos de la computadora:" HorizontalOptions="Center" />
            <Label x:Name="LabelPuntosComputadora" Text="0" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
